<UserControl x:Class="BattleShips.UI.Views.Controls.GameHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views ="clr-namespace:BattleShips.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext ="{d:DesignInstance Type= views:GameHistoryViewModel}">
    <Grid>

        <ListView ItemsSource="{Binding History}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Shooter" DisplayMemberBinding="{Binding Shooter}" />
                    <GridViewColumn Header="Point" DisplayMemberBinding="{Binding Point}" />
                    <GridViewColumn Header="Is Got Ship" DisplayMemberBinding="{Binding IsShipCell}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>